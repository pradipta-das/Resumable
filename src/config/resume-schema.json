      "id": "education",
      "title": "Education",
      "icon": "graduation-cap",
      "required": false,
      "repeatable": true,
      "fields": [
        {
          "id": "institution",
          "label": "Institution",
          "type": "text",
          "required": true,
          "placeholder": "University/School Name"
        },
        {
          "id": "degree",
          "label": "Degree",
          "type": "text",
          "required": true,
          "placeholder": "Bachelor of Science, Master of Arts, etc."
        },
        {
          "id": "field",
          "label": "Field of Study",
          "type": "text",
          "required": false,
          "placeholder": "Computer Science, Business, etc."
        },
        {
          "id": "startDate",
          "label": "Start Date",
          "type": "date",
          "required": false
        },
        {
          "id": "endDate",
          "label": "End Date",
          "type": "date",
          "required": false
        },
        {
          "id": "gpa",
          "label": "GPA",
          "type": "text",
          "required": false,
          "placeholder": "3.8/4.0"
        },
        {
          "id": "description",
          "label": "Description",
          "type": "textarea",
          "required": false,
          "placeholder": "Relevant coursework, achievements, etc."
        }
      ]
    },
    "skills": {
      "id": "skills",
      "title": "Skills",
      "icon": "code",
      "required": false,
      "fields": [
        {
          "id": "categories",
          "label": "Skill Categories",
          "type": "array",
          "required": false,
          "itemFields": [
            {
              "id": "category",
              "label": "Category",
              "type": "text",
              "placeholder": "e.g., Programming Languages, Tools, etc."
