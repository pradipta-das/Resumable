        {
          "id": "url",
          "label": "Project URL",
          "type": "url",
          "required": false,
          "placeholder": "https://github.com/yourproject"
        },
        {
          "id": "startDate",
          "label": "Start Date",
          "type": "date",
          "required": false
        },
        {
          "id": "endDate",
          "label": "End Date",
          "type": "date",
          "required": false
        },
        {
          "id": "technologies",
          "label": "Technologies Used",
          "type": "text",
          "required": false,
          "placeholder": "React, Node.js, MongoDB, etc."
        },
        {
          "id": "description",
          "label": "Description",
          "type": "textarea",
          "required": false,
          "placeholder": "Describe the project and your role..."
        }
      ]
    },
    "certifications": {
      "id": "certifications",
      "title": "Certifications",
      "icon": "award",
      "required": false,
      "repeatable": true,
      "fields": [
        {
          "id": "name",
          "label": "Certification Name",
          "type": "text",
          "required": true,
          "placeholder": "Certification Name"
        },
        {
          "id": "issuer",
          "label": "Issuing Organization",
          "type": "text",
          "required": true,
          "placeholder": "Organization Name"
        },
        {
          "id": "date",
          "label": "Date Obtained",
          "type": "date",
          "required": false
        },
        {
          "id": "expiryDate",
          "label": "Expiry Date",
          "type": "date",
          "required": false
        },
        {
          "id": "credentialId",
          "label": "Credential ID",
          "type": "text",
          "required": false,
          "placeholder": "Credential ID"
        },
        {
          "id": "url",
          "label": "Credential URL",
          "type": "url",
          "required": false,
          "placeholder": "https://certification-url.com"
        }
      ]
