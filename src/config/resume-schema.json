    "languages": {
      "id": "languages",
      "title": "Languages",
      "icon": "globe",
      "required": false,
      "fields": [
        {
          "id": "languages",
          "label": "Languages",
          "type": "array",
          "required": false,
          "itemFields": [
            {
              "id": "language",
              "label": "Language",
              "type": "text",
              "placeholder": "e.g., English, Spanish, etc."
            },
            {
              "id": "proficiency",
              "label": "Proficiency",
              "type": "select",
              "options": [
                "Native",
                "Fluent",
                "Proficient",
                "Intermediate",
                "Basic"
              ]
            }
          ]
        }
      ]
