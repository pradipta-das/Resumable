        {
          "id": "company",
          "label": "Company",
          "type": "text",
          "required": true,
          "placeholder": "Company Name"
        },
        {
          "id": "position",
          "label": "Position",
          "type": "text",
          "required": true,
          "placeholder": "Job Title"
        },
        {
          "id": "startDate",
          "label": "Start Date",
          "type": "date",
          "required": true
        },
        {
          "id": "endDate",
          "label": "End Date",
          "type": "date",
          "required": false
        },
        {
          "id": "current",
          "label": "Currently Working Here",
          "type": "checkbox",
          "required": false
        },
        {
          "id": "location",
          "label": "Location",
          "type": "text",
          "required": false,
          "placeholder": "City, State/Country"
        },
        {
          "id": "description",
          "label": "Description",
          "type": "textarea",
          "required": false,
          "placeholder": "Describe your responsibilities and achievements..."
        }
      ]
